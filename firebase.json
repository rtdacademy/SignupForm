{
  "functions": [
    {
      "source": "functions",
      "codebase": "core",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".cache"
      ],
      "predeploy": []
    },
    {
      "source": "functions-triggers",
      "codebase": "triggers",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".cache"
      ],
      "predeploy": []
    },
    {
      "source": "functions-rtdlearning",
      "codebase": "rtdlearning",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".cache"
      ],
      "predeploy": []
    }
  ],
  "hosting": [
    {
      "target": "main",
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "*.html.bak",
        "index.main.html",
        "index.second.html",
        "index.rtdconnect.html"
      ],
      "rewrites": [
        {
          "source": "/api/tts-v2",
          "function": "streamTTSv2"
        },
        {
          "source": "/api/tts",
          "function": "streamTTS"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    },
    {
      "target": "second-site",
      "public": "public-second",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "*.html.bak",
        "index.main.html",
        "index.second.html",
        "index.rtdconnect.html"
      ],
      "rewrites": [
        {
          "source": "/api/tts-v2",
          "function": "streamTTSv2"
        },
        {
          "source": "/api/tts",
          "function": "streamTTS"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    },
    {
      "target": "rtd-connect",
      "public": "public-rtdconnect",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "*.html.bak",
        "index.main.html",
        "index.second.html",
        "index.rtdconnect.html"
      ],
      "rewrites": [
        {
          "source": "/api/tts-v2",
          "function": "streamTTSv2"
        },
        {
          "source": "/api/tts",
          "function": "streamTTS"
        },
        {
          "source": "/__/auth/**",
          "destination": "/__/auth/**"
        },
        {
          "source": "/__/firebase/**",
          "destination": "/__/firebase/**"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    }
  ],
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "database": {
      "host": "127.0.0.1",
      "port": 8765,
      "namespace": "rtd-academy-default-rtdb"
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5000
    },
  
    "ui": {
      "host": "127.0.0.1",
      "enabled": true,
      "port": 4000
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4500
    },
    "singleProjectMode": true
  }
}
