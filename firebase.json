{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    }
  ],
  "hosting": [
    {
      "target": "main",
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "*.html.bak",
        "index.main.html",
        "index.second.html"
      ],
      "rewrites": [
        {
          "source": "/api/tts",
          "function": "streamTTS"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    },
    {
      "target": "second-site",
      "public": "public-second",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "*.html.bak",
        "index.main.html",
        "index.second.html"
      ],
      "rewrites": [
        {
          "source": "/api/tts",
          "function": "streamTTS"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    }
  ],
  "emulators": {
  "auth": {
    "port": 9099
  },
  "functions": {
    "port": 5001
  },
  "firestore": {
    "port": 8080
  },
  "database": {
    "port": 9000
  },
  "hosting": {
    "port": 5000
  },
  "storage": {
    "port": 9199
  },
  "ui": {
    "enabled": true
  },
  "singleProjectMode": true
}
}