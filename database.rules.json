{
  "rules": {
    ".read": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
    ".write": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
    "staff": {
      "$uid": {
        ".read": "$uid === auth.uid && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
        ".write": "$uid === auth.uid && auth.token.email.matches(/.*@rtdacademy\\.com$/)"
      }
    },
    "courses": {
      ".read": true,
      ".write": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)"
    },
    "students": {
      ".indexOn": [".value"],
      "$sanitizedEmail": {
        ".read": "auth != null && ($sanitizedEmail.replace(',', '.') === auth.token.email || auth.token.email.matches(/.*@rtdacademy\\.com$/))",
        ".write": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
        "profile": {
          ".read": "auth != null && ($sanitizedEmail.replace(',', '.') === auth.token.email || auth.token.email.matches(/.*@rtdacademy\\.com$/))"
        },
        "courses": {
          "$courseId": {
            ".read": "auth != null && ($sanitizedEmail.replace(',', '.') === auth.token.email || auth.token.email.matches(/.*@rtdacademy\\.com$/))"
          }
        }
      }
    },
    "allPayments": {
      ".read": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
      ".write": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
      ".indexOn": ["StudentEmail", "type", "timestamp", "orphaned"]
    },
    "chats": {
      ".read": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
      ".write": "auth != null && auth.token.email.matches(/.*@rtdacademy\\.com$/)",
      "$chatId": {
        ".read": "auth != null && (root.child('chats').child($chatId).child('participants').val().contains(auth.token.email.replace('.', ',')) || auth.token.email.matches(/.*@rtdacademy\\.com$/))",
        ".write": "auth != null && (root.child('chats').child($chatId).child('participants').val().contains(auth.token.email.replace('.', ',')) || auth.token.email.matches(/.*@rtdacademy\\.com$/))",
        "participants": {
          ".validate": "newData.isString() && newData.val().contains(auth.token.email.replace('.', ','))"
        },
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['sender', 'content', 'timestamp']) && newData.child('sender').val() == auth.token.email"
          }
        }
      }
    }
  }
}